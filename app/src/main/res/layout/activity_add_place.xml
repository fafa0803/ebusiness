<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ebusiness.myapp.PlacesPackage.AddPlaceActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/AddPlaceTitleTextbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Place Title" />

    <EditText
        android:id="@+id/AddPlacePlzTextbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Postcode" />

    <EditText
        android:id="@+id/AddPlaceStreetTextbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Street and street Number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Description of the sight see Place"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddPlaceRatingBar" />
    <Button
        android:id="@+id/AddSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:background="@color/themeColor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/AddPlacePlatzhalter2"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/AddPlacePhotoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/photo"
        android:background="@color/themeColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/AddPlacePlatzhalter"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/AddPlaceSaveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="@color/themeColor"/>




</LinearLayout>
