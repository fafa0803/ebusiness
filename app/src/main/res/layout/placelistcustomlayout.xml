<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.parse.ParseImageView
        android:id="@+id/placeCustomLayoutImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/placeCustomLayoutTextview"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_toRightOf="@id/placeCustomLayoutImageView"
        android:paddingTop="15dip"
        />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:scaleX="0.85"
        android:scaleY="0.85"
        android:id="@+id/placeCustomLayoutRatingBar"
        android:layout_toRightOf="@id/placeCustomLayoutImageView"
        android:layout_below="@+id/placeCustomLayoutTextview"
        />



</RelativeLayout>